
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body  style="background-image:url(../../Content/images/bg123.jpg); background-repeat:no-repeat;width:100%; height:100%;">
    <div class="container ">

        <div class="row">
            <div class="col-lg-12  ">
                <!-- form card login -->
                <div class="card font-weight-normal m-5">

                    <div class="card-header">
                        <h3 class=" text-center shadow-sm card-subtitle">Enter valid EmailId</h3>
                    </div>
                    <div class="card-body bg-info">
                        <form class="form" role="form">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>

                            </div>

                            <button type="submit" class="btn btn-dark btn-lg btn-block" id="btnLogin ">Submit</button>


                        </form>
                    </div>
                    <!--/card-block-->
                </div>
                <!-- /form card login -->
            </div>


        </div>
        <!--/row-->
    </div>
</body>