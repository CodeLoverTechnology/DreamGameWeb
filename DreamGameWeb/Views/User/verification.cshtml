
@{
    ViewBag.Title = "verification";
    Layout = "~/Views/Shared/_Layout_afterlogin.cshtml";
}


<body style="background-image:url(../../Content/images/bg123.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <form>

                    <div class="form-group">
                        <label for="exampleInputPassword1" class="text-white mt-xl-5">Mobile OTP</label>
                        <input type="tel" class="form-control" id="txtMobileOTP" name="txtMobileOTP" pattern="^\d{10}$" placeholder="Mobile Number" required>
                    </div>

                    <button type="submit" class="btn btn-danger btn-lg btn-block">Submit</button>
                </form>
            </div>
            <div class="col-lg-6">
                <form>

                    <div class="form-group">
                        <label for="exampleInputEmail1" class="text-white mt-xl-5">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>

                    </div>

                    <button type="submit" class="btn btn-danger btn-lg btn-block">Login</button>
                </form>
            </div>
        </div>
    </div>
</body>