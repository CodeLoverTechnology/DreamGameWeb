@{
    ViewBag.Title = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Content/images/12.jpg" alt="First slide" height="550">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/images/2.jpg" alt="Second slide" height="550">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/images/3.jpg" alt="Third slide" height="550">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
    
<div class="container-fluid bg-light">
    <div class="row">
        <div class="col-md-4 col-lg-4 col-sm-4 "><img class="rounded-0" src="~/Content/images/4cr.png" /><p class="mx-4 text-dark">User</p></div>
        <div class="col-md-4 col-lg-4 col-sm-4 "><img src="~/Content/images/calender_grey.png" /><p class="mx-2 text-dark">Daily Contests</p></div>
        <div class="col-md-4 col-lg-4 col-sm-4 "><img src="~/Content/images/multi_sport_grey.png" /><p class="mx-3 text-dark">Multiple Sports</p></div>
    </div>
</div>


