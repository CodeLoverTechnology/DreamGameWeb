
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body class="bg-light">
    <div class="container">

        <div class="row">
            <div class="col-lg-12  ">
                <!-- form card login -->
                <div class="card font-weight-normal m-5">
                    <div class="card-header ">
                        <h3 class=" bg-light text-center text-dark">User Login</h3>
                    </div>
                    <div class="card-body bg-info">
                        <form class="form" role="form">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control" id="txtEmailId"  name="txtEmailId" aria-describedby="emailHelp" placeholder="Enter email" required>

                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" id="txtPassword" name="txtPassword" placeholder="Password" required>
                            </div>
                            <div>

                            </div>
                            <button type="submit" class="btn btn-dark btn-lg btn-block" id="btnLogin">Login</button>
                            <link /><a href="../User/ForgetPassword" class="text-white">Forget Password</a>

                        </form>
                    </div>
                    <!--/card-block-->
                </div>
                <!-- /form card login -->
            </div>


        </div>
        <!--/row-->
    </div>
</body>