
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card{
        margin:200px 0 0 200px;
    }
</style>
<body  style=" background-color:darkseagreen; background-repeat:no-repeat;width:100%; height:100%;">
    <div class="container">

        <div class="row"style="margin-bottom:200px; box-shadow:initial;">
            <div class="col-lg-12  ">
                <!-- form card login -->
                <div class="card font-weight-normal ml-3 bg-transparent border-white" style="margin-bottom:200px;">
                    <div class="card-header ">
                        <h3 class="text-center text-danger">User Login</h3>
                    </div>
                    <div class="bg-transparent border-info">
                        <form class="form">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control" id="txtEmailId"  name="txtEmailId" aria-describedby="emailHelp" placeholder="Enter email" required>

                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" id="txtPassword" name="txtPassword" placeholder="Password" required>
                            </div>
                            <div>

                            </div>
                            <button type="submit" class="btn btn-dark btn-lg btn-block" id="btnLogin">Login</button>
                            <link /><a href="../User/ForgetPassword" class="text-white">Forget Password</a>

                        </form>
                    </div>
                    <!--/card-block-->
                </div>
                <!-- /form card login -->
            </div>


        </div>
        <!--/row-->
    </div>
</body>