<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dream </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top">
        <a class="navbar-brand mx-0 p-0" href="#">Logo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse text-white" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto text-white">
                <li class="nav-item active">
                    <a class="nav-link text-white" href="../Home/Index">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="../Home/About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="../Home/Contact">Contact</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="../User/HowToPlay">HowToPlay</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link text-white" href="../Home/Registration">Registration</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link text-white" href="../Home/Login">Login</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="row">
        @RenderBody()
    </div>
    <div class="container-fluid body-content">
        <div class="col-lg-12 col-md-6 col-sm-6 col-xl-6">
            <footer class="fixed-bottom bg-primary">
                <p class="float-left text-white m-2 ">
                    Copy Right 2018 All reserved
                    Dream 11
                    <a href="../User/PrivacyandPolicy" class="text-dark">Privacy And Policy</a>
                </p>

                <p class="m-0 float-right text-white m-2">Presented By :<a href="http://codelovertechnology.com/" class="text-dark" target="_blank"> CodeLover Technology</a></p>

            </footer>
            
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>












